<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Cuadrícula de botones de bebidas -->
    <GridLayout
        android:id="@+id/grid_bebidas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="4"
        android:rowCount="2">
        <!-- Los botones se añadirán aquí de forma dinámica -->
    </GridLayout>

    <!-- Tabla de factura -->
    <TableLayout
        android:id="@+id/tabla_factura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- Las filas de la factura se añadirán aquí de forma dinámica -->
    </TableLayout>

    <!-- Fila de total -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total" />

        <TextView
            android:id="@+id/total_factura"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0.00" />

        <Button
            android:id="@+id/pagarBoton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pagar" />

        <Button
            android:id="@+id/limpiarBoton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Limpiar" />
    </TableRow>
</LinearLayout>
