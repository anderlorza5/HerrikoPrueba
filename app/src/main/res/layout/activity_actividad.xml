<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ActividadActivity">

    <!-- Título -->
    <EditText
        android:id="@+id/tituloInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:enabled="false"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Name"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Descripción -->
    <EditText
        android:id="@+id/descripcionInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:enabled="false"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tituloInput" />

    <!-- Fecha y Hora Inicio -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fecha"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@id/fechaInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/descripcionInput"
        app:layout_constraintWidth_percent="0.3" />

    <EditText
        android:id="@+id/fechaInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:enabled="false"
        android:gravity="center"
        android:hint="Fecha"
        android:inputType="textPersonName"
        android:textColor="#090909"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textView3"
        app:layout_constraintTop_toTopOf="@id/textView3"
        app:layout_constraintWidth_percent="0.7" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Hora Inicio"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@id/horaInicioInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        app:layout_constraintWidth_percent="0.3" />

    <EditText
        android:id="@+id/horaInicioInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF"
        android:enabled="false"
        android:gravity="center"
        android:hint="Hora inicio"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textView2"
        app:layout_constraintTop_toTopOf="@id/textView2"
        app:layout_constraintWidth_percent="0.7" />

    <!-- Hora Final -->
    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Hora Final"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@id/horaFinalInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horaInicioInput"
        app:layout_constraintWidth_percent="0.3" />

    <EditText
        android:id="@+id/horaFinalInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF"
        android:enabled="false"
        android:gravity="center"
        android:hint="Hora final"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textView5"
        app:layout_constraintTop_toTopOf="@id/textView5"
        app:layout_constraintWidth_percent="0.7" />

    <!-- Lugar -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Lugar"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@id/lugarInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horaFinalInput"
        app:layout_constraintWidth_percent="0.3" />

    <EditText
        android:id="@+id/lugarInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF"
        android:enabled="false"
        android:gravity="center"
        android:hint="Lugar"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textView"
        app:layout_constraintTop_toTopOf="@id/textView"
        app:layout_constraintWidth_percent="0.7" />

    <!-- Precio -->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Precio"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@id/precioInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lugarInput"
        app:layout_constraintWidth_percent="0.3" />

    <EditText
        android:id="@+id/precioInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF"
        android:enabled="false"
        android:gravity="center"
        android:hint="Precio"
        android:inputType="number"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textView4"
        app:layout_constraintTop_toTopOf="@id/textView4"
        app:layout_constraintWidth_percent="0.7" />

    <!-- Botones Borrar y Modificar en una cadena horizontal -->
    <Button
        android:id="@+id/borrarBoton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/design_default_color_error"
        android:text="Borrar"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@id/modificarBoton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/precioInput"
        app:layout_constraintWidth_percent="0.48" />

    <Button
        android:id="@+id/modificarBoton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text="Modificar"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@id/guardarBoton"
        app:layout_constraintStart_toEndOf="@id/borrarBoton"
        app:layout_constraintTop_toTopOf="@id/borrarBoton"
        app:layout_constraintWidth_percent="0.48" />

    <!-- Botón Guardar -->

    <!-- Botón Apuntarse -->

    <Button
        android:id="@+id/guardarBoton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="80dp"
        android:backgroundTint="@color/verdeHerriko"
        android:text="Guardar"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mostrarInscritosBoton"
        app:layout_constraintWidth_percent="0.48" />

    <Button
        android:id="@+id/apuntarseBoton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/verdeHerriko"
        android:text="Apuntarse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/borrarBoton" />

    <!-- Botón Mostrar Inscritos -->
    <Button
        android:id="@+id/mostrarInscritosBoton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Mostrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/apuntarseBoton" />

</androidx.constraintlayout.widget.ConstraintLayout>
